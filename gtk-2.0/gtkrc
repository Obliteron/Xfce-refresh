}

style "titlebar" = "default"
{
    bg[SELECTED]      = shade (0.3, @selected_bg_color)
    fg[SELECTED]      = @base_color
    bg[INSENSITIVE]   = @bg_color
    fg[INSENSITIVE]   = shade (0.7, @bg_color)
}

