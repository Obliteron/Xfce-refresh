{
    xthickness = 0
    ythickness = 0

    engine "xfce"
    {
        smooth_edge = true
        grip_style = none
        boxfill
        {
            fill_style = plain
            orientation = automatic
            shade_start = 1.10
            shade_end = 0.90
        }
    }
}

style "progress" = "default"
{
    xthickness = 0
    ythickness = 0

    bg[ACTIVE]        = shade (0.9, @bg_color)
    bg[NORMAL]        = shade (0.98, @base_color)
    bg[PRELIGHT]      = @selected_bg_color

    fg[PRELIGHT]      = @selected_fg_color

    engine "xfce"
    {
        smooth_edge = true
        grip_style = none
        boxfill
        {
            fill_style = gradient
            orientation = automatic
            shade_start = 1.00
            shade_end = 0.95            
        }
    }
}

