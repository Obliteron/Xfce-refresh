        {
            fill_style = plain
        }
    }
}

style "sidebar" = "toolbar"
{
    base[NORMAL]      = shade(1.05, mix(0.2, @selected_bg_color, @bg_color))
}

style "pager" = "gradient"
{
    xthickness = 0
    ythickness = 0

    bg[SELECTED]      = shade(0.8, @selected_bg_color)
    fg[SELECTED]      = @base_color

    engine "xfce"
    {
        smooth_edge = true
    }
}

style "button" = "default"
{
    xthickness = 2
    ythickness = 2

    bg[ACTIVE]        = shade (0.9, @bg_color)
    bg[NORMAL]        = @bg_color
    bg[PRELIGHT]      = shade (0.9, @bg_color)
    bg[SELECTED]      = shade (0.9, @selected_bg_color)

    fg[ACTIVE]        = shade (0.1, @fg_color)
    fg[SELECTED]      = @base_color

    engine "xfce"
    {
        smooth_edge = true
        grip_style = none
        boxfill
        {
            fill_style = gradient
            orientation = vertical
            shade_start = 1.03
            shade_end = 0.95
        }
    }
}

